@model Truco.Models.Regiao
@{
    ViewBag.Title = "Regioes";
}
<hgroup>
    <h2>@ViewBag.Title.</h2>
    <h3>@ViewBag.Message</h3>
</hgroup>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">                
                <label>Excluir - @ViewBag.Title</label>                
            </div>
            <div class="panel-body">
                @Html.Partial("_CriarOuEditar")
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <a href="@Url.Action("Indice")" class="btn btn-default"><i class="fa fa-arrow-left fa-fw"></i> Voltar</a>
        <button type="submit" class="btn btn-default"><i class="fa fa-trash-o fa-fw"></i> Excluir</button>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('input').attr('readonly', 'readonly');
        });
    </script>
}

