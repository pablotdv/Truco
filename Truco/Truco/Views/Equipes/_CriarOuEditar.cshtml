@model Truco.Models.Equipe
<div class="row form-group">
	<div class="col-md-4 col-xs-6">
        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
    </div>

	<div class="col-md-4 col-xs-6">
        @Html.LabelFor(model => model.RegiaoId, htmlAttributes: new { @class = "control-label" })
		@Html.DropDownListFor(model => model.RegiaoId, 
			(SelectList)ViewBag.Regiaos, 
			"Selecione um Regiao...",
			new { @class = "form-control selectpicker" })        
		@Html.ValidationMessageFor(model => model.RegiaoId, "", new { @class = "text-danger" })
    </div>
</div> <!-- ./row -->

