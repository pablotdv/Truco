@using Truco.ViewModels
@model LogradourosViewModel
@using (Ajax.BeginForm("Pesquisa", "Logradouros", new AjaxOptions()
{
    HttpMethod = "GET",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "pesquisa"
}))
{
	<div class="row form-group">
		<div class="col-md-4 col-xs-6">
			@Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label" })
			@Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
		</div> 
	</div>
	<div class="row">
        <div class="col-lg-12">
            <div class="btn-group">                        
				<button type="submit" class="btn btn-default" id="submit" name="submit">Pesquisar</button>
				<a href="@Url.Action("Criar")" class="btn btn-primary">Criar</a>
            </div>
        </div>
    </div>
}

