<script>
	
	var engineCompeticaos = new Bloodhound({
        remote: { url: '@Url.Action("PesquisarCompeticaos", "CompeticoesEquipes")?nome=%QUERY', wildcard: '%QUERY' },
        datumTokenizer: Bloodhound.tokenizers.obj.whitespace('nome'),
        queryTokenizer: Bloodhound.tokenizers.whitespace
    });

    engineCompeticaos.initialize();

    $('#CompeticaoNome').typeahead(null, {
        source: engineCompeticaos.ttAdapter(),
		limit: 15,
        displayKey: "Nome",
        templates: {
            suggestion: function (data) {
                return '<p><strong>' + data.Nome + '</strong></p>';
            }
        }
    }).on('typeahead:selected', function (e, suggestion, name) {
        $("#CompeticaoId").val(suggestion.CompeticaoId);
    });
	
	var engineEquipes = new Bloodhound({
        remote: { url: '@Url.Action("PesquisarEquipes", "CompeticoesEquipes")?nome=%QUERY', wildcard: '%QUERY' },
        datumTokenizer: Bloodhound.tokenizers.obj.whitespace('nome'),
        queryTokenizer: Bloodhound.tokenizers.whitespace
    });

    engineEquipes.initialize();

    $('#EquipeNome').typeahead(null, {
        source: engineEquipes.ttAdapter(),
		limit: 15,
        displayKey: "Nome",
        templates: {
            suggestion: function (data) {
                return '<p><strong>' + data.Nome + '</strong></p>';
            }
        }
    }).on('typeahead:selected', function (e, suggestion, name) {
        $("#EquipeId").val(suggestion.EquipeId);
    });
</script>

